{% extends 'base.html.twig' %}

{% block title %}Direccion index{% endblock %}

{% block body %}
    <h1>Direccion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Direccioncliente</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for direccion in direccions %}
            <tr>
                <td>{{ direccion.id }}</td>
                <td>{{ direccion.direccioncliente }}</td>
                <td>
                    <a href="{{ path('direccion_show', {'id': direccion.id}) }}">Mostrar</a>
                    <a href="{{ path('direccion_edit', {'id': direccion.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('direccion_new') }}">Crear nuevo</a>
{% endblock %}